#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir//bin/sh" ]; then
  exec "$basedir//bin/sh"  "$basedir/../console-ninja/shell/console-ninja" "$@"
else 
  exec /bin/sh  "$basedir/../console-ninja/shell/console-ninja" "$@"
fi
